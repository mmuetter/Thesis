journal = {PLoS Comput. Biol.},
number = {9},
pages = {1--22},
pmid = {28915236},
title = {{Modeling antibiotic treatment in hospitals: A systematic approach shows benefits of combination therapy over cycling, mixing, and mono-drug therapies}},
volume = {13},
year = {2017}
}
