journal = {Philos. Trans. R. Soc. B Biol. Sci.},
keywords = {Antagonism,Antibiotics,Antimicrobial peptide responses,Mathematical modelling,Pharmacodynamic function,Synergy},
number = {1695},
pmid = {27160596},
title = {{Antimicrobial combinations: Bliss independence and loewe additivity derived from mechanistic multi-hit models}},
