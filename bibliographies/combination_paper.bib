journal = {Evol. Appl.},
keywords = {Bliss independence,Loewe additivity,bactericidal drug,bacteriostatic drug,drug combination,drug dosing},
number = {8},
pages = {1--25},
title = {{The many dimensions of combination therapy: How to combine antibiotics to limit resistance evolution}},
