file = {:Users/malte/Library/Mobile Documents/com{\~{}}apple{\~{}}CloudDocs/Paper{\_}mendeley/2018/Russ, Kishony - 2018 - Additivity of inhibitory effects in multidrug combinations - Nature Microbiology.pdf:pdf},
